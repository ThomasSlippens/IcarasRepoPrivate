<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<!-- Database connection settings -->
		<property name="connection.driver_class">
			org.hsqldb.jdbcDriver
		</property>
		
		<property name="connection.url">
			jdbc:hsqldb:hsql://localhost:9005/icaras
		</property>
		
		
		<property name="connection.username">sa</property>
		<property name="connection.password"></property>
		
		

		<property name="connection.pool_size">2</property>
		
		<property name="dialect">org.hibernate.dialect.HSQLDialect</property>
		
		<property name="current_session_context_class">thread</property>
		<property name="cache.provider_class">
			org.hibernate.cache.NoCacheProvider
		</property>
		<property name="show_sql">true</property>
		
		 <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">create</property> 

		<mapping class="nl.rsvier.icaras.core.relatiebeheer.Persoon"/>
		<mapping class="nl.rsvier.icaras.core.relatiebeheer.Aanbieding"/>
		<mapping class="nl.rsvier.icaras.core.relatiebeheer.Arbeidsovereenkomst"/>
		<mapping class="nl.rsvier.icaras.core.relatiebeheer.CvGenerator"/>
		<mapping class="nl.rsvier.icaras.core.relatiebeheer.Kandidaat"/>
		<mapping class="nl.rsvier.icaras.core.relatiebeheer.Werknemer"/>
		<mapping class="nl.rsvier.icaras.core.Bedrijf"/>
		<mapping class="nl.rsvier.icaras.core.Relatie"/>
		<mapping class="nl.rsvier.icaras.core.Vacature"/>
		
	</session-factory>
</hibernate-configuration>
